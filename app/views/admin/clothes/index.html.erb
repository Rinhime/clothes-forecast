<div class="container py-3">
  <div class="row py-3">
    <div class="col-md-2 offset-md-2">
      <h2>服装一覧</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-2">
      <%= image_tag 'やじるし.jpg', size: "150x700" %>
    </div>
    <div class="col-md-2 offset-2">
      <% @clothes.each do |clothe| %>
        <%= image_tag clothe.get_image(100,100), size: "150x150" %>
        <%= clothe.celsius %>
        <%= clothe.introduction %>
      <% end %>
    </div>
  </div>
</div>