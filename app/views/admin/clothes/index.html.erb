<div class="container py-3">
  <div class="row py-3">
    <div class="col-md-2 offset-md-2">
      <h2>服装一覧</h2>
    </div>
    <div class="col-md-2 offset-md-5">
      <%= link_to "+服装を追加する", new_admin_clothe_path %>
    </div>
  </div>
  <div class="col-md-9 offset-md-1 p-3">
    <div class="row">
      <% @clothes.each do |clothe| %>
      <div class="col-md-2">
        <%= link_to admin_clothe_path(clothe.id) do %>
        <%= image_tag clothe.get_image(100,100), size: "70x250" %><br>
        <% end %>
        <%= clothe.celsius %><br>
        <%= clothe.introduction.truncate(13) %>
      </div>
      <% end %>
    </div>
  </div>
</div>