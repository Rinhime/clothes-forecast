<div class="container py-3">
  <div class="row py-3">
    <h2>（管理者用）ユーザー一覧</h2>
  </div>
  <div class="row justify-content-center py-3">
    <table>
      <thead>
        <tr>
          <th>ユーザーID</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
            <%= user.name %>
            <% end %>
          </td>
          <td><%= user.email %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>