<div class="container py-3">
  <h4><%= flash[:notice] %></h4>
  <div class="row py-3">
    <h2>ユーザー一覧</h2><br>
    
  </div>
  <div class="row justify-content-center py-3">
    <table  class="table" cellpadding="10">
      <thead align="center">
        <tr>
          <th>ユーザーID</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>アカウント</th>
        </tr>
      </thead>
      <tbody align="center">
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
            <%= user.name %>
            <% end %>
          </td>
          <td><%= user.email %></td>
          <td><%= user.user_status %></td>
        </tr>
        <% end %>
        <%= paginate @users %>
      </tbody>
    </table>
  </div>
</div>