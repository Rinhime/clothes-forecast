<div class="container py-3">
  <div class="row py-3">
    <div class="col-md-2 p-3 m-3">
      <div class="serch_form">
        <% if user_signed_in? %>
          <%= form_with url: public_search_path, local: true, method: :get do |f| %>
            <%= f.text_field :word %>
            <%= f.select :range, options_for_select([['User'], ['Post']]) %>
            <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
            <%= f.submit "検索", class: "btn btn-primary" %>
          <% end %>
          <h6>タグで探す</h6>
          <% @tag_list.each do |tag| %>
            <%= link_to tag.name, public_posts_path(tag_id: tag.id) %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-9 p-3">
      <div class="row py-3">
        <h2>服装一覧</h2>
      </div>
      <div class="row py-3">
        <% @clothes.each do |clothe| %>
        <div class="col-md-2 mx-5">
          <%= link_to public_clothe_path(clothe.id) do %>
          <%= image_tag clothe.get_image(100,100), size: "70x250" %>
          <%= clothe.celsius %><br>
          <%= clothe.introduction.truncate(13) %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>