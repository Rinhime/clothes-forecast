<div class="container py-3">
  <div class="row py-3">
    <h2>投稿一覧</h2>
  </div>
  <% @tags.each do |tag| %>
      <i class="fa-sharp fa-solid fa-tag"></i>
      <%= link_to tag.tag_name,public_search_tag_path(tag_id: tag.id) %>
    <% end %>
  <div class="row py-3">
    <table class="table" cellpadding="10">
      <thead>
        <tr>
          <th>ユーザー</th>
          <th>気温</th>
          <th>投稿内容</th>
          <th>いいね</th>
        </tr>
      </thead>
      <% @posts.each do |post| %>
      <tbody>
        <tr>
          <td><%= post.user.name %></td>
          <td><%= post.clothe.celsius %></td>
          <td width="600px">
            <%= link_to public_post_path(post.id) do %>
            <%= post.text %>
            <% end %>
          </td>
          <td>♥<%= post.favorite.count %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>