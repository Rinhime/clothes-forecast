
<div class="serch_form">
  
  <h6>タグで探す</h6>
  <% @tag_list.each do |tag| %>
  <%= link_to tag.tag_name, public_posts_path(tag_id: tag.id) %>
  <% end %>
</div>
<div class="container py-3">
  <div class="row py-3">
    <h2>投稿一覧</h2>
  </div>
  <% @tag_list.each do |tag| %>
    <%= link_to "##{tag.tag_name}", public_posts_path(tag_id: tag.id) %>
  <% end %>
  <div class="row py-3">
    <table class="table" cellpadding="10">
      <thead>
        <tr>
          <th>ユーザー</th>
          <th>気温</th>
          <th>投稿内容</th>
          <th>いいね</th>
        </tr>
      </thead>
      <% @posts.each do |post| %>
      <tbody>
        <tr>
          <td><%= post.user.name %></td>
          <td><%= post.clothe.celsius %></td>
          <td width="600px">
            <%= link_to public_post_path(post.id) do %>
            <%= post.text %>
            <% end %>
          </td>
          <td>♥<%= post.favorite.count %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>