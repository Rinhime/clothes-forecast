<div class="container py-3">
  <div class="row py-3">
    <div class="col-md-3 offset-md-1">
      <h2>新規登録</h2>
    </div>
    <div class="col-md-5 offset-md-1">
      新規登録がお済みの方は
      <%= link_to "こちら", new_user_session_path %>から
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-2">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table cellpadding="7">
        <tr>
          <th><%= f.label :ユーザーネーム %></th>
          <th><%= f.text_field :name, :size=>"30" %></th>
        </tr>
        <tr>
          <th><%= f.label :メールアドレス %></th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"30" %></th>
        </tr>
        <tr>
          <th><%= f.label :パスワード %><% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %></th>
          <th>
        <%= f.password_field :password, autocomplete: "new-password", :size=>"30" %></th>
        </tr>
        <tr>
          <th><%= f.label :パスワード（確認用） %></th>
          <th><%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"30" %></th>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7 offset-md-4 py-5">
      <%= f.submit "新規登録" %>
    </div>
  </div>
  <% end %> 
</div>