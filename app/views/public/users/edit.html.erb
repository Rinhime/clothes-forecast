<div class="container py-3">
  <div class="row py-3">
    <div class="col-md-3 offset-md-2">
      <h2>ユーザー編集</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @user, url: public_users_show_path, method: :patch do |f| %>
    <table cellpadding="7">
      <tr>
        <th>ユーザーネーム</th>
        <td><%= f.text_field :name, :size=>"50" %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email, :size=>"50" %></td>
      </tr>
      <tr>
        <th>画像</th>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
    </table>
  </div>
  <div class="row justify-content-center py-5">
    <div class="buttom p-3">
      <%= f.submit '変更を保存', class:'btn btn-sm btn-primary' %>
      <% end %>
    </div>
    <div class="buttom p-3">
      <%= link_to "退会する", public_users_withdraw_path, method: :patch, data: { confirm: "本当に退会しますか？" }, class:'btn btn-sm btn-danger' %>
    </div>
  </div>
  
</div>