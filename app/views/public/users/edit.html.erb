<div class="container">
  <div class="row">
    <h2>ユーザー編集</h2>
    <%= form_with model: @user, url: public_user_path, method: :patch do |f| %>
    
    <h5>ユーザーネーム</h5>
    <%= f.text_field :name %>
    <h5>メールアドレス</h5>
    <%= f.text_field :email %>
    <h5>画像</h5>
    <%= f.file_field :image, accept: "image/*" %>
    
    <%= f.submit '変更を保存' %>
    <% end %>
  </div>
  
</div>